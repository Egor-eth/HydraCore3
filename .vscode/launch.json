{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "SpectralBlend(CPU)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/bin-release/hydra",
        "args": ["--cpu", "--spectral",
                 "-in", "../comparisonrender/Tests/Blend/0002/spectral-blend-sphere-hydra3.xml",
                 "-integrator", "mispt", 
                 "-width", "1024",
                 "-height", "1024",
                 "-spp", "256",
                 "-scn_dir", "../comparisonrender",
                 "-out", "OUT_BLEND_CPU.bmp"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    },

